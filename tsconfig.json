{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "module": "ES2022",
    "removeComments": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "lib/**/*"
  ]
}
