{
  "name": "ical-browser",
  "version": "0.0.9",
  "description": "Browser and Node iCalendar Generator",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "source": "lib/index.ts",
  "typings": "dist/types/types.d.ts",
  "exports": {
    ".": {
      "node": "dist/esm/index.js",
      "require": "dist/cjs/index.js",
      "import": "dist/esm/index.mjs"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc --build ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json ; mv dist/esm/index.js dist/esm/index.mjs",
    "watch": "tsc --watch",
    "test": "node test/index.test.mjs",
    "test:cjs": "node test/index.test.cjs",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qertis/ical-browser.git"
  },
  "keywords": [
    "ical",
    "ical browser",
    "ical node",
    "rfc5545",
    "ics",
    "icalendar typescript",
    "iCalendar 2.0",
    "apple calendar format",
    "calendar events",
    "calendar alarms",
    "calendar todo",
    "calendar journal"
  ],
  "author": "Denis Baskovsky <baskovsky@ya.ru> (https://baskovsky.ru)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qertis/ical-browser/issues"
  },
  "engines": {
    "node": ">=18.x"
  },
  "files": [
    "/dist"
  ],
  "homepage": "https://github.com/qertis/ical-browser#readme",
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "mime-types": "^2.1.35"
  }
}
